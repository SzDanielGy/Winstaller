#: import os os
<IFolderOpen>:
    size_hint: 1, 1
    title: ""
    separator_height: 0       
    FloatLayout:
        orientation: 'vertical'

        FileChooser:
            keyboard_mode: 'managed'
            id: file_browser
            size_hint: 1,0.9
            pos_hint: {"x":0, "y":0.1}
            path: "install"
            FileChooserListLayout:
                #on_selection: path_id.selected(file_browser.selection)
                #on_selection: path_id.input_select(file_browser.selection)

        Button:
            text: 'Close'
            size_hint: 0.2,0.1
            pos_hint: {"x":0.8, "y":0}
            on_release: root.dismiss()
        
        Button:
            id: folder_select_b
            text: 'Select'
            size_hint: 0.2,0.1
            pos_hint: {"x":0.6, "y":0}
            on_release:
                root.select_i_folder(file_browser.path, file_browser.selection and file_browser.selection[0] or '')
                root.dismiss()

